<Window x:Class="DE1805.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DE1805" mc:Ignorable="d" Title="Выбор станции" Height="200"
        Width="300" MinHeight="200" MinWidth="300">
    <Grid Margin="8px">
        <StackPanel Margin="0 0 0 0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Id АЗС" HorizontalAlignment="Center" />
            <TextBox x:Name="StationIdTb" Margin="0 6 0 6" />
            <Button DockPanel.Dock="Right" Content="Загрузить данные" Width="100"
                    Click="LoadDataButton_Click" />
        </StackPanel>
    </Grid>
</Window>
